# Configuration variables for Proxmox Kubernetes cluster
# Copy this file to terraform.tfvars and customize the values

proxmox_config = {
  url            = "https://your-proxmox-server:8006/api2/json"
  tls            = true
  node_name      = "your-proxmox-node-name"
  storage_pool   = "local-lvm"
  network_bridge = "vmbr0"
  gateway        = "192.168.1.1"
}

cluster_name = "my-k8s-cluster"

master_vm_config = {
  template_name = "debian12-cloudinit"
  ip_base       = "192.168.1.130"
  vm_count      = 2
  cpu_core      = 2
  cpu_socket    = 2
  cpu_type      = 0
  memory        = 4096
  os_type       = "cloud-init"
  qemu_os       = "l26"
  bios          = "ovmf"
  ip_offset     = 0
  disk_size     = 32
  id_offset     = 800
}

worker_vm_config = {
  template_name = "debian12-cloudinit"
  ip_base       = "192.168.1.132"
  vm_count      = 3
  cpu_core      = 4
  cpu_socket    = 2
  cpu_type      = 0
  memory        = 8192
  os_type       = "cloud-init"
  qemu_os       = "l26"
  bios          = "ovmf"
  ip_offset     = 0
  disk_size     = 64
  id_offset     = 900
}

lxc_gateways = {
  template = "local:vztmpl/ubuntu-22.04-standard_22.04-1_amd64.tar.zst"
  hostname = "k8s-gateway"
  ipv4     = "192.168.1.102"
  cpu      = 2
  memory   = 4096
  swap     = 0
}
